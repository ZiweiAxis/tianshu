# 飞书应用凭证
FEISHU_APP_ID=cli_xxxxxxxxxx
FEISHU_APP_SECRET=xxxxxxxxxx

# Matrix 服务器连接信息
MATRIX_HOMESERVER=http://localhost:8008
MATRIX_GATEWAY_USER=@gateway:localhost
MATRIX_GATEWAY_TOKEN=syt_xxxxxxxxxx

# 房间策略（true=每个用户独立房间，false=共享房间）
USE_PRIVATE_ROOM=false

# 若使用共享房间，需指定房间ID
SHARED_ROOM_ID=!shared:localhost

# E2-S3：出站投递使用的 Room（Bridge 需已加入）
DELIVERY_ROOM_ID=

# E11-S3：健康探针端口
HEALTH_PORT=8080

# E11-S4：存储后端 memory | sqlite | postgres | mysql
# TIANSHU_STORAGE=sqlite
# TIANSHU_SQLITE_PATH=/data/tianshu.db
# TIANSHU_STORAGE=postgres
# TIANSHU_PG_URL=postgresql://user:pass@host:5432/tianshu
# TIANSHU_STORAGE=mysql
# TIANSHU_MYSQL_HOST=mysql
# TIANSHU_MYSQL_PORT=3306
# TIANSHU_MYSQL_USER=tianshu
# TIANSHU_MYSQL_PASSWORD=secret
# TIANSHU_MYSQL_DATABASE=tianshu

# 谛听服务接口（独立项目提供）
DITING_AUDIT_URL=http://diting-server:5000/audit/message  # 上报消息
DITING_APPROVE_CALLBACK_URL=http://localhost:5000/approve_callback  # 本服务接收回调的地址
# E4-S4：Agent 注册完成后通知谛听初始化权限（POST agent_id、owner_id）
DITING_INIT_PERMISSION_URL=http://diting-server:5000/init_permission
# E9-S1：主 Agent 登记 Sub-agent 后可选通知谛听（POST main_agent_id, sub_agent_id）
# DITING_SUB_AGENT_REGISTER_URL=http://diting-server:5000/sub_agent_register
# I-018：谛听链上 DID 接口基址（如 http://diting:8080/chain），注册/上线时调用 DID 注册与查询
# DITING_CHAIN_URL=http://diting:8080/chain
